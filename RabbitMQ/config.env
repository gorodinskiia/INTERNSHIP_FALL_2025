# RabbitMQ Configuration Template
# Copy this file to .env and fill in your actual values

# RabbitMQ Connection Settings
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_PROTOCOL=amqp
RABBITMQ_HEARTBEAT=60
RABBITMQ_CONNECTION_TIMEOUT=60000
RABBITMQ_CONNECTION_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=2.0

# Message Settings
MESSAGE_TTL=60000
MAX_RETRIES=3
RETRY_DELAY=1000

# Consumer Settings
CONSUMER_PREFETCH=1

# Publisher Settings
PUBLISHER_PERSISTENT=true
PUBLISHER_MANDATORY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/rabbitmq.log

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Docker Configuration
DOCKER_RABBITMQ_VERSION=3-management
DOCKER_COMPOSE_FILE=docker-compose.yml

# Production Settings
PRODUCTION_SSL=true
PRODUCTION_CLUSTER=true
PRODUCTION_HA=true

# Monitoring Settings
MONITORING_ENABLED=true
METRICS_PORT=15692
PROMETHEUS_GATEWAY_URL=http://localhost:9091

# Security Settings
SSL_CERT_PATH=/etc/rabbitmq/ssl/cert.pem
SSL_KEY_PATH=/etc/rabbitmq/ssl/key.pem
SSL_CA_PATH=/etc/rabbitmq/ssl/ca.pem

